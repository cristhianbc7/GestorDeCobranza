<div class="expanded-section">
    <h4 class="section-title">
        <i class="fas fa-comment-alt"></i>
        Agregar Nota de Seguimiento
    </h4>
    <div class="form-group">
        <label class="form-label">Método de Contacto</label>
        <div class="contact-method-dropdown">
            <Dropdown TItem="ContactMethod" Items="@ContactMethod.GetAllMethods()"        SelectedItem="@SelectedContactMethod"
                      Placeholder="Seleccionar método..."                         OnItemSelected="OnContactMethodSelected">
                <ItemTemplate>
                    <i class="@context.IconClass"></i>
                    <span>@context.Name</span>
                </ItemTemplate>
            </Dropdown>
        </div>
    </div>
    <div class="form-group">
        <label class="form-label">Resultado</label>
        <div class="contact-method-dropdown">
            <Dropdown TItem="Result" Items="@Result.GetAllResults()" SelectedItem="@SelectedResult"
                      Placeholder="Seleccionar resultado..." OnItemSelected="OnResultSelected">
                <ItemTemplate>
                    <i class="@context.IconClass"></i>
                    <span>@context.Name</span>
                </ItemTemplate>
            </Dropdown>
        </div>
    </div>
    <div class="form-group">
        <label class="form-label">Notas</label>
        <textarea class="form-textarea" placeholder="Escribe los detalles de la interacción..."></textarea>
    </div>
    <button class="btn btn-primary" style="width: 100%;">
        <i class="fas fa-save"></i>
        <span>Guardar Nota</span>
    </button>
</div>

<div class="expanded-grid" style="margin-top: 24px;">

</div>

@code {
    [Parameter]
    public ContactMethod? SelectedContactMethod { get; set; }
    [Parameter]
    public Result? SelectedResult { get; set; }

    [Parameter]
    public EventCallback<ContactMethod> SelectedContactMethodChanged { get; set; }
    [Parameter]
    public EventCallback<Result> SelectedResultChanged { get; set; }

    protected override void OnInitialized()
    {
        // Set default if null
        if (SelectedContactMethod == null)
        {
            SelectedContactMethod = ContactMethod.GetAllMethods().FirstOrDefault()!;
        }

        if (SelectedResult == null)
        {
            SelectedResult = Result.GetAllResults().FirstOrDefault()!;
        }
    }

    private async Task OnContactMethodSelected(ContactMethod method)
    {
        SelectedContactMethod = method;
        await SelectedContactMethodChanged.InvokeAsync(method);
    }

    private async Task OnResultSelected(Result result)
    {
        SelectedResult = result;
        await SelectedResultChanged.InvokeAsync(result);
    }
}